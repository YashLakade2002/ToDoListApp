<%- include("header") -%>

  <div class="box" id="heading">
    <h1>Tasks</h1>
  </div>

  <div class="box">


    <% newListItems.forEach((singleItem)=>{ %>
      
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%=singleItem._id%>" onChange="this.form.submit()">
          <p> <%= singleItem.name %></p>
        </div>

      </form>
    <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit">+</button>
      </form>
  </div>

<%- include("footer") -%>
